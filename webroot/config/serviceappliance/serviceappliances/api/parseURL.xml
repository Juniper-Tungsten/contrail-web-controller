<urlLists>
    <require>
        <define>parseURLReq</define>
        <path>process.mainModule.exports["corePath"] + '/src/serverroot/common/parseURLRequire'</path>
    </require>
    <require>
        <define>serviceapplianceconfigapi</define>
        <path>./serviceapplianceconfig.api</path>
    </require>
        
    <!-- API / Feature definition for Service Appliance configuration -->
    <!-- 1. List Service Appliances for a given Service Appliance Set
            - /api/tenants/config/service-appliances, listServiceAppliance
    -->
    <item>
        <url>/api/tenants/config/service-appliances</url>
        <method>get</method>
        <feature>serviceapplianceconfig</feature>
        <callback>serviceapplianceconfigapi.listServiceAppliance</callback>
    </item>
    <item>
        <url>/api/tenants/config/service-appliances</url>
        <method>post</method>
        <feature>serviceapplianceconfig</feature>
        <callback>serviceapplianceconfigapi.createServiceAppliance</callback>
    </item>
    <item>
        <url>/api/tenants/config/service-appliance/:id</url>
        <method>put</method>
        <feature>serviceapplianceconfig</feature>
        <callback>serviceapplianceconfigapi.updateServiceAppliance</callback>
    </item>
    <item>
        <url>/api/tenants/config/service-appliance/:id</url>
        <method>delete</method>
        <feature>serviceapplianceconfig</feature>
        <callback>serviceapplianceconfigapi.deleteServiceAppliance</callback>
    </item>
    <item>
        <url>/api/tenants/config/get-all-physical-interfaces</url>
        <method>get</method>
        <feature>serviceapplianceconfig</feature>
        <callback>serviceapplianceconfigapi.getAllPhysicalInterfaces</callback>
    </item>
</urlLists>